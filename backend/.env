# LearnAid Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-characters
DEBUG=True
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///./learnaid.db

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001"

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIRECTORY=uploads

# AI/ML Configuration (optional)
GROQ_API_KEY=your-groq-api-key-here
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Logging
LOG_LEVEL=INFO
